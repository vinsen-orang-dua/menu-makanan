}
// Order Function
void Order(string name[], double &tprice, int &i)
{
    string category, FoodCode, bvgCode, temp;
    int qty;
    double price;

    do
    {
        cout << endl;
        cout << "Please select category (Food / Beverages): " << endl;
        cout << "Enter CONFIRM to get your receipt: " << endl;
        cin >> category;
        // category = toupper(category);
        if (category == "FOOD")
        {
            cout << "\nEnter food code and quantity. " << endl;
            cout << "Enter DONE if you have finished. " << endl
                 << endl;
            do
            {
                cout << "Code: ";
                cin >> FoodCode;
                if (FoodCode == "DONE")
                {
                    break;
                }

                if (FoodCode == "A")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam";
                    price = 5.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "AT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam Telur";
                    price = 6.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "ATC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam Telur Cheese";
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "D")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging";
                    price = 5.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "DT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging Telur";
                    price = 6.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "DTC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging Telur Cheese";
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "C")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Spaghetti Carbonara";
                    price = 13.95 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "B")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Spaghetti Bolognese";
                    price = 13.95 * qty;
                    tprice += price;
                    i++;
                }
                else
                    cout << "Food Code not available" << endl;

            } while (true);
        }

        else if (category == "Beverages")
        {
            cout << "\nEnter beverages code and quantity. " << endl;
            cout << "Enter DONE if you have finished. " << endl
                 << endl;
            do
            {
                cout << "Code: ";
                cin >> bvgCode;

                if (bvgCode == "DONE")
                {
                    break;
                }

                if (bvgCode == "WJ")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Watermelon Juice";
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (bvgCode == "HJ")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Honeydew Juice";
                    price = 8.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (bvgCode == "TC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    do
                    {
                        cout << "Enter Hot or Cold: ";
                        cin >> temp;
                        if (temp == "Hot" || temp == "Cold")
                        {
                            if (temp == "Hot")
                            {
                                name[i] = "Teh C Hot";
                                price = 4.50 * qty;
                                tprice += price;
                                i++;
                            }
                            else if (temp == "Cold")
                            {
                                name[i] = "Teh C Cold";
                                price = 5.00 * qty;
                                tprice += price;
                                i++;
                            }
                        }
                        else
                        {
                            cout << "Invalid! Please enter again.";
                        }
                    } while (temp != "Hot" && temp != "Cold");
                }
                else if (bvgCode == "LT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    do
                    {
                        cout << "Enter Hot or Cold: ";
                        cin >> temp;
                        if (temp == "Hot" || temp == "Cold")
                        {
                            if (temp == "Hot")
                            {
                                name[i] = "Lemon Tea Hot";
                                price = 4.50 * qty;
                                tprice += price;
                                i++;
                            }
                            else if (temp == "Cold")
                            {
                                name[i] = "Lemon Tea Cold";
                                price = 5.00 * qty;
                                tprice += price;
                                i++;
                            }
                        }
                        else
                        {
                            cout << "Invalid! Please enter again.";
                        }
                    } while (temp != "Hot" && temp != "Cold");
                }
                else
                    cout << "Beverages code not available." << endl;

            } while (true);
        }
        else if (category == "CONFIRM")
            break;
        else
        {
            cout << "Please enter a valid category." << endl;
        }
    } while (category!="CONFIRM");
}
//TotalPurchase Function
void TotalPurchase(double &tprice)
{
    cout << "\nYour total price is: RM" << tprice << endl;
    if (tprice > 40.0)
    {
        tprice = tprice - (tprice * 0.1);
        cout<<fixed<<setprecision(2);
        cout << "You have received a 10% Discount.";
    }
}
//Output Function
void Output(string name[], double tprice, int i)
{
    cout << "\nYour Order: " << endl;
    for (int j = 0; j < i; j++)
    {
        cout << j + 1 << ". " << name[j] << endl;
    }
    cout << "Your total purchase is: RM" << tprice << endl;
}
//Change Function
void Change(double tprice)
{
    double amt, change=0.0;
    char opt;

    cout << "\nChoose your Payment Method. " << endl;
    cout << "1.Cash" << endl;
    cout << "2.Debit" << endl;
    cout << "Enter 1 or 2: ";
    do
    {
        cin >> opt;

        if (opt == '1')
        {
            cout << "\nEnter amount: RM";
            do
            {
                cin >> amt;
                if (amt < tprice)
                {
                    cout << "Money not enough to pay please enter again: RM";
                }
                else if (amt > tprice)
                {
                    change = amt - tprice;
                    if (change > 0.0)
                    {
                        cout << "\nYou have RM" << change << " change.";
                        cout << "Please go to counter to collect your change.";
                        break;
                    }
                }
                else if (amt = tprice)
                {
                    cout << "\n\aNo change to collect";
                    break;
                }
            } while (true);
            break;
        }

        else if (opt == '2')
        {
            tprice = tprice - (tprice * 0.1);
            cout<<fixed<<setprecision(2);
            cout << "\a\nReceive 10% Discount" << endl;
            cout << "Total Price: RM" << tprice << endl;
            cout << "No change to collect.";
            break;
        }
        else
        {
            cout << "\nInvalid Option!! Please enter Again: ";
        }

    } while (true);
}
