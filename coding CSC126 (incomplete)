//loginUI Funciton

void greetings(){
    char key;
    char userType;
    cout << "+----------------------------------------+" << endl;
    cout << "|     WELCOME   TO   CAFE KAPAL LAUD     |" << endl;
    cout << "+----------------------------------------+" << endl;
    cout << "Press any key to continue..." << endl;
    cin >> key;
}

void mainMenu(){
    char userType;
    do{
        cout << "\n+---------------------------------------+" << endl;
        cout << "| [1] |   Customer Login                |" << endl;
        cout << "+---------------------------------------+" << endl;
        cout << "| [2] |   Admin Login                   |" << endl;
        cout << "+---------------------------------------+" << endl;
        cout << "| [3] |   Exit                          |" << endl;
        cout << "+---------------------------------------+" << endl;
        cout << "Please enter number to continue: ";
        cin >> userType;

        if (userType == '1'){
        cout << "admin login" << endl;
        }
        else if (userType == '2'){
        TableMenu();
        }
        else if (userType == '3'){
        cout << "Exit";
        }
        else{
            cout << "Incorrect" << endl;
        }
    }while (userType != '1' && userType != '2' && userType != '3');
}

