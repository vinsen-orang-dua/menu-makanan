//Order Function
void Order(string name[], int qtyStore[], double &tprice, int &i) 
{
    string category, FoodCode, bvgCode, temp;
    int qty;
    double price;

    do
    {
        cout << endl;
        cout << "        WELCOME CUSTOMER !        " << endl;
        cout << "+--------------------------------+" << endl;
        cout << "|    1   |     [F] Food          |" << endl;
        cout << "|--------+-----------------------|" << endl;
        cout << "|    2   |     [B] Beverages     |" << endl;
        cout << "|--------+-----------------------|" << endl;
        cout << "|    3   |     [C] Confirm Order |" << endl;
        cout << "|--------+-----------------------|" << endl;
        cout << "|    4   |     [M] Main Menu     |" << endl;
        cout << "+--------------------------------+" << endl;
        cout << "Please select your choice: ";
        cin >> category;
        category = toUpperCase(category);
        if (category == "1" || category == "F" || category == "FOOD")
        {
            FoodMenu();
            cout << "\nEnter food code and quantity. " << endl;
            cout << "Enter DONE if you have finished. " << endl;
            do
            {
                cout << "Code: ";
                cin >> FoodCode;
                FoodCode = toUpperCase(FoodCode);
                if (FoodCode == "DONE")
                {
                    break;
                }

                if (FoodCode == "A")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam";
                    qtyStore[i] = qty;
                    purchasedA += qty;
                    price = 5.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "AT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam Telur";
                    qtyStore[i] = qty;
                    purchasedAT += qty;
                    price = 6.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "ATC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Ayam Telur Cheese";
                    qtyStore[i] = qty;
                    purchasedATC += qty;
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "D")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging";
                    qtyStore[i] = qty;
                    purchasedD += qty;
                    price = 5.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "DT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging Telur";
                    qtyStore[i] = qty;
                    purchasedDT += qty;
                    price = 6.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "DTC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Burger Daging Telur Cheese";
                    qtyStore[i] = qty;
                    purchasedDTC += qty;
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "C")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Spaghetti Carbonara";
                    qtyStore[i] = qty;
                    purchasedC += qty;
                    price = 13.95 * qty;
                    tprice += price;
                    i++;
                }
                else if (FoodCode == "B")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Spaghetti Bolognese";
                    qtyStore[i] = qty;
                    purchasedB += qty;
                    price = 13.95 * qty;
                    tprice += price;
                    i++;
                }
                else
                    cout << "Food Code not available" << endl;

            } while (true);
        }

        else if (category == "2" || category == "B" || category == "BEVERAGES")
        {
            BeveragesMenu();
            cout << "\nEnter beverages code and quantity. " << endl;
            cout << "Enter DONE if you have finished. " << endl;
            do
            {
                cout << "Code: ";
                cin >> bvgCode;
                bvgCode = toUpperCase(bvgCode);

                if (bvgCode == "DONE")
                {
                    break;
                }

                if (bvgCode == "WJ")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Watermelon Juice";
                    qtyStore[i] = qty;
                    purchasedWJ += qty;
                    price = 7.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (bvgCode == "HJ")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    name[i] = "Honeydew Juice";
                    qtyStore[i] = qty;
                    purchasedHJ += qty;
                    price = 8.00 * qty;
                    tprice += price;
                    i++;
                }
                else if (bvgCode == "TC")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    do
                    {
                        cout << "Enter Hot or Cold: ";
                        cin >> temp;
                        temp = toUpperCase(temp);
                        if (temp == "HOT" || temp == "COLD")
                        {
                            if (temp == "HOT")
                            {
                                name[i] = "Teh C Hot";
                                qtyStore[i] = qty;
                                price = 4.50 * qty;
                                tprice += price;
                                i++;
                            }
                            else if (temp == "COLD")
                            {
                                name[i] = "Teh C Cold";
                                qtyStore[i] = qty;
                                price = 5.00 * qty;
                                tprice += price;
                                i++;
                            }
                            purchasedTC += qty;
                        } 
                        else
                        {
                            cout << "Invalid! Please enter again.";
                        }
                    } while (temp != "HOT" && temp != "COLD");
                }
                else if (bvgCode == "LT")
                {
                    cout << "Quantity: ";
                    cin >> qty;
                    do
                    {
                        cout << "Enter Hot or Cold: ";
                        cin >> temp;
                        temp = toUpperCase(temp);
                        if (temp == "HOT" || temp == "COLD")
                        {
                            if (temp == "HOT")
                            {
                                name[i] = "Lemon Tea Hot";
                                qtyStore[i] = qty;
                                price = 4.50 * qty;
                                tprice += price;
                                i++;
                            }
                            else if (temp == "COLD")
                            {
                                name[i] = "Lemon Tea Cold";
                                qtyStore[i] = qty;
                                price = 5.00 * qty;
                                tprice += price;
                                i++;
                            }
                            purchasedLT += qty;
                        }
                        else
                        {
                            cout << "Invalid! Please enter again.";
                        }
                    } while (temp != "HOT" && temp != "COLD");
                }
                else
                    cout << "Beverages code not available." << endl;

            } while (true);
        }
        else if (category == "M" || category == "4")
        {
            MainMenu();
        }
        else if (category == "C" || category == "3")
        {
            TotalPurchase(tprice); // Calculate total price & apply discount
        }
        else
        {
            cout << "Please enter a valid category." << endl;
        }
    } while (true);
}
//TotalPurchase Function
void TotalPurchase(double &tprice)
{
    system ("cls");
    cout << "\n======================================================" << endl;
    cout << "Your total price is: RM" << tprice << endl;
    if (tprice > 40.0)
    {
        tprice = tprice - (tprice * 0.1);
        cout << fixed << setprecision(2);
        cout << "You have received a 10% Discount." << endl;
    }
    else if (tprice == 0.0)
    {
        cout << "You have not purchased anything." << endl;
        MainMenu();
    }

    Output(name, qtyStore, tprice, i); //Display the order details
}
//Output Function
void Output(string name[], int qtyStore[], double tprice, int i)
{
    cout << "\n+==============+" << endl;
    cout << "|  Order List  | " << endl;
    cout << "+==============+" << endl;
    for (int j = 0; j < i; j++)
    {
        cout << j + 1 << ". " << name[j] << " - " << "X" << qtyStore[j] << endl;
    }
    cout << "Your total purchase is: RM" << tprice << endl;
    cout << "======================================================" << endl;

    Change(tprice, TotalCust); //Handle payment method and calculate change if have
}
//Change Function
void Change(double tprice, int &TotalCust)
{
    double amt, change = 0.0;
    char opt;

    cout << "\nChoose your Payment Method. " << endl;
    cout << "1.Cash" << endl;
    cout << "2.Debit" << endl;
    cout << "Enter 1 or 2: ";
    do
    {
        cin >> opt;

        if (opt == '1')
        {
            cout << "\nEnter amount: RM";
            do
            {
                cin >> amt;
                if (amt < tprice)
                {
                    cout << "Money not enough to pay please enter again: RM";
                }
                else if (amt > tprice)
                {
                    change = amt - tprice;
                    if (change > 0.0)
                    {
                        cout << "\nYou have RM" << change << " change." << endl;
                        cout << "Please go to counter to collect your change." << endl;
                        cout << "======================================================" << endl;
                        break;
                    }
                }
                else if (amt = tprice)
                {
                    cout << "\n\aNo change to collect" << endl;
                    cout << "======================================================" << endl;
                    break;
                }
            } while (true);
            break;
        }

        else if (opt == '2')
        {
            tprice = tprice - (tprice * 0.1);
            cout << fixed << setprecision(2);
            cout << "\a\nReceive 10% Discount" << endl;
            cout << "Total Price: RM" << tprice << endl;
            cout << "RM" << tprice << " has been deducted from your account." << endl;
            cout << "======================================================" << endl;
            break;
        }
        else
        {
            cout << "\nInvalid Option!! Please enter Again: ";
        } 
    } while (true);
    TotalCust++;
    total=tprice;
    if (total > highestSale)
        highestSale = total;
    if (total < lowestSale)
        lowestSale = total;
    totalSales+=tprice;
    MainMenu();
}
//Admin Login Function
